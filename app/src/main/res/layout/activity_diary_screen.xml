            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_below="@id/himsg"
            android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp">

                        <androidx.cardview.widget.CardView
