<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/primary"
    android:textAlignment="center"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/mainHeading"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="40dp"
        android:fontFamily="@font/emilys_candy"
        android:padding="20dp"
        android:text="Mood Diary"
        android:textColor="#041365"
        android:textSize="70sp"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_below="@+id/mainHeading"
        android:layout_margin="20dp"
        android:padding="20dp"
        android:textColor="#041365"
        android:textStyle="normal"
        android:textSize="20sp"
        android:fontFamily="@font/emilys_candy"
        android:text="Introducing your very own Mood Diary! This is your space to track your daily mood swings and emotions.">

    </TextView>

    <Button
        android:id="@+id/updatediary"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/description"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/emilys_candy"
        android:textSize="15sp"
        android:backgroundTint="#041365"
        android:textColor="#FBA8C5"
        android:text="Update my diary......ðŸ˜">

    </Button>


</RelativeLayout>